<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shuhag"
    tools:context=".GenereActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre by"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Popular"
                android:textColor="@color/white"
                android:textSize="30dp"/>

            <RadioButton
                android:id="@+id/advanture"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Advanture"
                android:textSize="30dp"/>
            <RadioButton
                android:id="@+id/action"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Action"
                android:textSize="30dp"/>
            <RadioButton
                android:id="@+id/animation"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Animation"
                android:textSize="30dp"/>
        </RadioGroup>


        <RadioGroup
            android:id="@+id/biography"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text=" Biography"
                android:textSize="30dp"/>
            <RadioButton
                android:id="@+id/comedy"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Comedy"
                android:textSize="30dp"/>

            <RadioButton
                android:id="@+id/crime"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Crime"
                android:textSize="30dp"/>
            <RadioButton
                android:id="@+id/documentary"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Documentary"
                android:textSize="30dp"/>
            <RadioButton
                android:id="@+id/history"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" History"
                android:textSize="30dp"/>

            <RadioButton
                android:id="@+id/family"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Family"
                android:textSize="30dp"/>
            <RadioButton
                android:id="@+id/film_noir"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Film-Noir"
                android:textSize="30dp"/>
        </RadioGroup>




    </LinearLayout>

</LinearLayout>